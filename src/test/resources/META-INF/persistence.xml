<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="vehicleTrackerPU" transaction-type="RESOURCE_LOCAL">
    <class>com.wizglobal.vehicletracker.domain.Customer</class>
    <class>com.wizglobal.vehicletracker.domain.GprsSetting</class>
    <class>com.wizglobal.vehicletracker.domain.GpsDevice</class>
    <class>com.wizglobal.vehicletracker.domain.GpsType</class>
    <class>com.wizglobal.vehicletracker.domain.IncomingSms</class>
    <class>com.wizglobal.vehicletracker.domain.OutgoingSms</class>
    <class>com.wizglobal.vehicletracker.domain.SimCard</class>
    <class>com.wizglobal.vehicletracker.domain.User</class>
    <class>com.wizglobal.vehicletracker.domain.UserRole</class>
    <class>com.wizglobal.vehicletracker.domain.Vehicle</class>
    <class>com.wizglobal.vehicletracker.domain.VehiclePosition</class>
    <class>com.wizglobal.vehicletracker.domain.VoiceCall</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.connection.username" value="ono"/>
      <property name="hibernate.connection.password" value="ono"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/vehicletracker"/>
      <property name="hibernate.max_fetch_depth" value="3"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.archive.autodetection" value="class, hbm"/>
    </properties>
  </persistence-unit>
</persistence>
